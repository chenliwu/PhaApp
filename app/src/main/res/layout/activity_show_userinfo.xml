<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:background="@color/activity_sliding_bg"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<include layout="@layout/common_toolbar"></include>

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

			<RelativeLayout
					android:id="@+id/rl_reviseHeader"
					android:padding="@dimen/layout_15dp"
					android:background="?attr/selectableItemBackground"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:text="头像"
						android:textColor="@color/black"
						style="@style/common_textview_style"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:id="@+id/textView"/>

				<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/civ_head"
						android:layout_width="60dp"
						android:layout_height="60dp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:src="@mipmap/ic_launcher"
						app:civ_border_color="@color/white"
						app:civ_border_width="2dp"/>


			</RelativeLayout>

			<include layout="@layout/common_cut_line"></include>

			<RelativeLayout
					android:id="@+id/rl_reviseNickname"
					android:padding="@dimen/layout_15dp"
					android:background="?attr/selectableItemBackground"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:text="昵称"
						android:textColor="@color/black"
						style="@style/common_textview_style"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"/>

				<TextView
						android:id="@+id/txt_showNickname"
						android:text="显示昵称"
						android:textColor="@color/gray"
						style="@style/common_textview_style"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"/>
			</RelativeLayout>

			<include layout="@layout/common_cut_line"></include>


			<RelativeLayout
					android:id="@+id/rl_reviseName"
					android:padding="@dimen/layout_15dp"
					android:background="?attr/selectableItemBackground"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:text="姓名"
						android:textColor="@color/black"
						style="@style/common_textview_style"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"/>

				<TextView
						android:id="@+id/txt_showName"
						android:text="显示姓名"
						android:textColor="@color/gray"
						style="@style/common_textview_style"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"/>
			</RelativeLayout>

			<include layout="@layout/common_cut_line"></include>


			<RelativeLayout
					android:id="@+id/rl_reviseSex"
					android:padding="@dimen/layout_15dp"
					android:background="?attr/selectableItemBackground"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:text="性别"
						android:textColor="@color/black"
						style="@style/common_textview_style"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"/>

				<TextView
						android:id="@+id/txt_showSex"
						android:text="显示性别"
						android:textColor="@color/gray"
						style="@style/common_textview_style"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"/>
			</RelativeLayout>

			<include layout="@layout/common_cut_line"></include>

			<RelativeLayout
					android:id="@+id/rl_reviseBirthday"
					android:padding="@dimen/layout_15dp"
					android:background="?attr/selectableItemBackground"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:text="出生日期"
						android:textColor="@color/black"
						style="@style/common_textview_style"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"/>

				<TextView
						android:id="@+id/txt_showBirthday"
						android:text="显示出生日期"
						android:textColor="@color/gray"
						style="@style/common_textview_style"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"/>
			</RelativeLayout>

			<include layout="@layout/common_cut_line"></include>

			<!--<RelativeLayout-->
					<!--android:id="@+id/rl_reviseTel"-->
					<!--android:padding="@dimen/layout_15dp"-->
					<!--android:background="?attr/selectableItemBackground"-->
					<!--android:layout_width="match_parent"-->
					<!--android:layout_height="wrap_content">-->

				<!--<TextView-->
						<!--android:text="电话"-->
						<!--android:textColor="@color/black"-->
						<!--style="@style/common_textview_style"-->
						<!--android:layout_centerVertical="true"-->
						<!--android:layout_width="wrap_content"-->
						<!--android:layout_height="wrap_content"-->
						<!--android:layout_alignParentLeft="true"/>-->

				<!--<TextView-->
						<!--android:id="@+id/txt_showTel"-->
						<!--android:text="显示电话"-->
						<!--android:textColor="@color/gray"-->
						<!--style="@style/common_textview_style"-->
						<!--android:layout_width="wrap_content"-->
						<!--android:layout_height="wrap_content"-->
						<!--android:layout_centerVertical="true"-->
						<!--android:layout_alignParentRight="true"/>-->
			<!--</RelativeLayout>-->

			<!--<include layout="@layout/common_cut_line"></include>-->

			<RelativeLayout
					android:id="@+id/rl_showScore"
					android:padding="@dimen/layout_15dp"
					android:background="?attr/selectableItemBackground"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:text="积分"
						android:textColor="@color/black"
						style="@style/common_textview_style"
						android:layout_centerVertical="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"/>

				<TextView
						android:id="@+id/txt_showScore"
						android:text="显示积分"
						android:textColor="@color/gray"
						style="@style/common_textview_style"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"/>
			</RelativeLayout>
			<include layout="@layout/common_cut_line"></include>



			<include layout="@layout/common_cut_line"></include>

			<LinearLayout
					android:id="@+id/ll_revisePwd"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/white"
					android:orientation="vertical">

				<!--兼容5.0以下的vector使用selector作为drawableLeft图片-->
				<!--系统设置
					android:drawableLeft="@drawable/select_personal_setting"
				-->
				<TextView
						android:id="@+id/tv_btn_settings"
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:background="?attr/selectableItemBackground"
						android:drawablePadding="16dp"
						android:drawableRight="@drawable/ic_chevron_right_grey_500_24dp"
						android:gravity="center_vertical"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:text="修改密码"
						android:textColor="@color/black"
						android:textSize="16sp"
						tools:ignore="HardcodedText,RtlHardcoded"/>
			</LinearLayout>

			<include layout="@layout/common_cut_line"></include>

			<Button
					android:id="@+id/btn_logout"
					android:layout_marginTop="@dimen/layout_20dp"
					android:layout_marginRight="@dimen/layout_20dp"
					android:layout_marginLeft="@dimen/layout_20dp"
					style="@style/common_red_button_style"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="退出账号"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
