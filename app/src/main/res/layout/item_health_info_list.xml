<?xml version="1.0" encoding="utf-8"?>
<!--健康资讯，列表子项布局-->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:paddingTop="@dimen/layout_5dp"
            android:paddingRight="@dimen/layout_0dp"
            android:paddingBottom="@dimen/layout_5dp"
            android:paddingLeft="@dimen/layout_0dp"

            android:layout_marginRight="@dimen/layout_20dp"
            android:layout_marginLeft="@dimen/layout_20dp"

            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
        <RelativeLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="InefficientWeight,RtlHardcoded">
            <TextView
                    android:text="资讯标题"
                    android:layout_marginRight="@dimen/layout_80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/txt_showHealthInfoTitle"
                    android:textSize="@dimen/text_18sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"/>
            <ImageView
                    android:id="@+id/iv_showHealthInfoImage"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/app_logo1"
                    android:layout_width="@dimen/layout_70dp"
                    android:layout_height="@dimen/layout_70dp"
                    tools:ignore="ContentDescription,RtlHardcoded"
                    android:contentDescription=""/>

        </RelativeLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="来源"
                    android:layout_weight="2"
                    android:paddingRight="@dimen/layout_5dp"
                    android:id="@+id/txt_showHealthInfoAuthor"
                    android:textSize="@dimen/text_16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>
            <TextView
                    android:text="时间"
                    android:layout_weight="1"
                    android:id="@+id/txt_showHealthInfoTime"
                    android:textSize="@dimen/text_16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout >