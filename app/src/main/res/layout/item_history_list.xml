<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--
        RecyclerView 实现item点击水波纹动画
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
    -->

    <LinearLayout
            style="@style/common_linearlayout_container_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_5dp"
                android:layout_marginBottom="@dimen/layout_5dp"
                tools:ignore="UselessParent">

            <TextView
                    android:text=""
                    android:layout_weight="2"
                    android:id="@+id/txt_showHistoryTitle"
                    android:textSize="@dimen/text_18sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,InefficientWeight,NestedWeights"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/layout_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text=""
                        android:layout_weight="2"
                        android:id="@+id/txt_showAuthor"
                        android:textSize="@dimen/text_16sp"
                        android:layout_marginRight="@dimen/layout_5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded"/>
                <TextView
                        android:text=""
                        android:layout_weight="2"
                        android:id="@+id/txt_showVisitCount"
                        android:textSize="@dimen/text_16sp"
                        android:layout_marginRight="@dimen/layout_5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded"/>
                <TextView
                        android:text=""
                        android:layout_weight="2"
                        android:id="@+id/txt_showTime"
                        android:textSize="@dimen/text_16sp"
                        android:layout_marginRight="@dimen/layout_5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
                android:padding="@dimen/layout_5dp"
                android:id="@+id/iv_showimg"
                android:layout_weight="0"
                android:src="@drawable/ic_help_green_500_36dp"
                android:layout_width="@dimen/layout_50dp"
                android:layout_height="@dimen/layout_50dp"
                tools:ignore="ContentDescription,RtlHardcoded"
                android:contentDescription=""/>

    </LinearLayout>




</LinearLayout >